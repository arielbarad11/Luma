<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray"
                android:contentDescription="תמונת משתמש"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="עדכון פרטי משתמש"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_user_display_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@email.com"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>

        <!-- שם פרטי -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_user_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="שם פרטי"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/iv_edit_first_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:contentDescription="עריכת שם פרטי"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <!-- אימייל -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/et_user_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="אימייל"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/iv_edit_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="עריכת אימייל"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- סיסמה -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/et_user_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="סיסמה"
                android:inputType="textPassword"
                android:textAlignment="viewStart"/>

            <ImageView
                android:id="@+id/iv_edit_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="עריכת סיסמה"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- כפתור עדכון -->
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#59005396"
            android:text="עדכן פרופיל" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
