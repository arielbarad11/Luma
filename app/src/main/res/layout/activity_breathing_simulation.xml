<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3F0"
    android:layoutDirection="rtl">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- המיכל הוגדל ל-250dp לפרופורציה טובה יותר -->
        <FrameLayout
            android:id="@+id/breathing_container"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:clipChildren="false">

            <View
                android:id="@+id/breathing_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:elevation="8dp"
                android:outlineProvider="background" />

            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="12dp"
                android:fontFamily="@font/font_secularone_regular"
                android:padding="20dp"
                android:text="מוכנים?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <!-- כפתור התחלה -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_breathing"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#005396"
        android:fontFamily="@font/font_secularone_regular"
        android:text="התחל סשן"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="32dp" />

    <!-- כפתור עצירה -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_stop_breathing"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#D32F2F"
        android:fontFamily="@font/font_secularone_regular"
        android:text="עצור סשן"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:visibility="gone"
        app:cornerRadius="32dp" />

</RelativeLayout>