<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F683D9BA"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- ראשי תיבות -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_user_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="JD"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

        <!-- פרטי פסיכולוג -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_psychologist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tv_item_psychologist_email"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="john.doe@example.com"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/iconcity"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tv_item_psychologist_city"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="Tel Aviv"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/price_icon"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tv_item_psychologist_sessionPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
