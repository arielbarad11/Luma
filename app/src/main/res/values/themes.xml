<resources>

    <style name="Base.Theme.Luma" parent="Theme.Material3.DayNight">
        <!-- צבע הרקע הכללי של כל האפליקציה (גוון חול חם ומרגיע) -->
        <item name="android:windowBackground">#F7F3F0</item>

        <!-- הגדרת צבע ה-StatusBar לכחול -->
        <item name="android:statusBarColor">#005396</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <item name="actionBarStyle">@style/Luma.ActionBar</item>
        <item name="logo">@drawable/luma_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/luma_logo</item>
        <item name="android:label"></item>
    </style>

    <style name="Theme.Luma" parent="Base.Theme.Luma" />

    <style name="Luma.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/top_bar_color</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <!-- עיצוב מותאם למסך הנחיתה (Splash) -->
    <!-- שיניתי פה את ה-windowBackground חזרה לכחול (או לטורקיז המקורי שלך) -->
    <style name="Theme.Luma.Landing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- אם את רוצה שהמסך פתיחה יהיה כולו כחול: -->
        <item name="android:windowBackground">#005396</item>

        <!-- אם את רוצה להחזיר לטורקיז שהיה קודם, תשני ל-#0D009688 -->

        <item name="android:statusBarColor">#005396</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Luma.NoActionBar" parent="Base.Theme.Luma">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#005396</item>
    </style>

    <style name="Theme.Luma.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Luma.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>