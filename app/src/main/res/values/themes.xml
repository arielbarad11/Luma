<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Luma" parent="Theme.Material3.DayNight">

        <item name="android:windowBackground">#AEE1CF</item>

        <!-- הפעלת ActionBar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- צבע רקע עליון -->
        <item name="actionBarStyle">@style/Luma.ActionBar</item>

        <!-- הצגת לוגו -->
        <item name="logo">@drawable/luma_logo</item>
        <item name="displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/luma_logo</item>

        <!-- ביטול הטייטל כדי שלא יוצג -->
        <item name="android:label"></item>
    </style>

    <style name="Theme.Luma" parent="Base.Theme.Luma" />

    <style name="Luma.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/top_bar_color</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>


    <!-- Theme (landing)מותאם למסך פתיחה -->
    <style name="Theme.Luma.Landing" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">#AEE1CF</item> <!-- צבע רקע אחיד -->
    </style>

    <style name="Theme.Luma.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Luma.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Luma.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>